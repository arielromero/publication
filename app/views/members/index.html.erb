
<div class="panel panel-info">
  <div class="panel-heading">
    <h4><%= t('member.index.title')%></h4>
    <%= search_form_for(@search, :html => {:class => "form-inline", :role => "form" }) do |f|%>
    <div class='form-group '>
     
        <%= f.label :last_name_cont, "Apellido contiene"%>
        <%= f.text_field :last_name_cont %>
      
       
        <button type="submit", class= 'btn btn-success'>
          <i class='icon-search icon-white'></i> Buscar
        </button>
        <br>
      
      <% end %>
    </div>
  </div>
  <div class="panel-body">
    <%= paginate @members %>
  <table class="table table-striped">
    <tr>
      <th><%= sort_link @search, :last_name, label_for('member.last_name')%></th>
      <th><%= sort_link @search, :first_name, label_for('member.first_name')%></th>
      <th><%= label_for('member.phone')%></th>
      <th><%= label_for('member.email')%></th>
      <th><%= label_for('member.address')%></th>
      <th></th>
      <th></th>
    </tr>

  <% @members.each do |member| %>
    <tr>
      <td><%= member.last_name %></td>
      <td><%= member.first_name%></td>
      <td><%= member.phone %></td>
      <td><%= member.email %></td>
      <td><%= member.address %></td>
      <td><i class="icon-pencil"></i><%= link_to t('member.update.link'), edit_member_path(member) %></td>
      <td><i class="icon-trash"></i><%= link_to t('member.delete.link'), member, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>
</div>
<div class="panel-footer">
   <%= link_to t('member.new.caption'), new_member_path, :class => "btn btn-primary"  %>
</div>
</div>



