<%= simple_form_for [@campaign, @product_received], :html => {:class => "form-horizontal" } do |f|  %>
  <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.association :product,  :collection => @campaign.products %>
      <%= f.association :product_received_group,  :collection => @campaign.product_received_groups %>
      <%= f.input :total %>
      <%= f.association :campaign, :as => :hidden, :input_html => {:value => @campaign.id} %>
      <%= f.input :description %>
      <%= f.input :received_at, :as => :string, :input_html => {:class => 'datepicker'}%>
      
    <!-- Cierro div del body del panel -->
    </div> 
  </div>
  <div class="panel-footer pull-right ">
    
    <%= link_to t('action.back'), campaign_product_receiveds_path(@campaign), :class => "btn btn-success "   %>  
    <%= f.button :submit, :class => "btn btn-primary " %>
    
  </div>
<% end %>
