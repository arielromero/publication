<h3><%= t('campaign.index.title')%></h3>
<div class="line-separator"></div>
<div class='index'>

  <table class="table table-striped">
    <tr>
      <th><%= label_for('campaign.name')%></th>
      <th><%= label_for('campaign.begin_at')%></th>
      <th><%= label_for('campaign.finish_at')%></th>
      <th></th> 
      <th></th>
      <th></th>
    </tr>

  <% @campaigns.each do |campaign| %>
