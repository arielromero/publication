<%= simple_form_for(@campaign, :html => {:class => "form-horizontal", :role => "form" }) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :begin_at, :as => :string, :input_html => {:class => 'datepicker'} %>
    <%= f.input :finish_at, :as => :string, :input_html => {:class => 'datepicker'}  %>

    <h4>Materiales</h4>
    
    <%= f.association :products, :as => :check_boxes  %>
    <%#= f.collection_check_boxes :product_ids, Product.all, :id, :name, :input_html => {:class => 'in-line'}%>
      
  
  </div> 
  <div class="panel-footer">
    <%= f.button :submit, :class => "btn btn-success"  %>
    <%= link_to t('action.show'), @campaign, :class => "btn btn-primary "    %> 
    <%= link_to t('action.back'), campaigns_path, :class => "btn btn-primary "   %>
  </div>
<% end %>
